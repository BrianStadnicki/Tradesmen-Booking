<%= simple_form_for @job do |f| %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :status %>
  <% if current_user.admin? %>
    <%= f.association :business %>
  <% end %>
  <%= f.association :tradesmen_profile, collection: current_user.business_belongs.tradesmen %>
  <%= f.button :submit %>

<% end %>
