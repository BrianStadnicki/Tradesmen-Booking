<p id="notice"><%= notice %></p>

<h1 class="display-1 text-center"><%= @job.title %></h1>

<%= form_with(model: @job) do |form| %>

  <div class="card">
    <% if can? :update, @job %>
      <div class="top-right">
        <div class="btn btn-outline-light btn-sm">
          <%= link_to edit_job_path(@job), class: "btn" do %>
            <%= svg('pencil-square') %>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="card-body">
      <fieldset disabled>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :address, class: "form-label" %>
          <%= form.text_field :address, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :status, class: "form-label" %>
          <%= form.text_field :status, class: "form-control" %>
        </div>

        <div class="mb-3 form-check form-switch">
          <%= form.check_box :active, checked: true, class: "form-check-input", id: "active_switch" %> <!-- FIXME: active can't be blank error when deactivating job -->
          <%= form.label :active, class: "form-label", for: "active_check" %>
        </div>

        <% if current_user.admin? %>
          <div class="mb-3">
            <%= form.label :business, class: "form-label" %>
            <div onclick="location.href='<%= business_path(@job.business) %>'" class="clickable">
              <%= form.collection_select(:business_id, Business.all, :id, :name, { prompt: true }, class: "form-control") %>
            </div>
          </div>
        <% end %>

        <% if @job.tradesmen_profile %>
          <div class="mb-3">
            <%= form.label :tradesmen_profile, class: "form-label" %>
            <div onclick="location.href='<%= tradesmen_profile_path(@job.tradesmen_profile) %>'" class="clickable">
              <%= form.collection_select(:tradesmen_profile_id, TradesmenProfile.all, :id, :name, { prompt: true }, class: "form-control") %>
            </div>
          </div>
        <% end %>

      </fieldset>
    </div>
    <% if current_user.tradesmen? %>
      <%= link_to "Apply", new_job_job_tradesmen_application_path(job_id: @job.id) %>
    <% end %>
  </div>

<% end %>
