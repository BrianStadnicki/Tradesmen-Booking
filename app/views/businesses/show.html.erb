<p id="notice"><%= notice %></p>

<div class="card text-center">
  <div class="card-header container-fluid">
    <div class="row">
      <div class="col-md-10">
        <h2 class="float-start"><%= @business.name %></h2>
      </div>
      <% if can? :update, @business %>
        <div class="col-md-2 float-end">
          <div class="btn btn-outline-light btn-sm">
            <%= link_to edit_business_path(@business), class: "btn" do %>
              <%= svg('pencil-square', width: '25px', height: '25px') %>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-hover table-striped table-bordered table-responsive">
      <tbody>
      <tr>
        <td>Description</td>
        <td><%= @business.description %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= @business.address %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%= @business.phone %></td>
      </tr>
      <% if @current_user.admin? %>
        <tr onclick="location.href='<%= user_path(@business.owner) %>'" class="clickable">
          <td>Owner</td>
          <td><%= @business.owner.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="card text-center">
  <div class="card-header">
    <h2 class="float-start">Users</h2>
  </div>
  <div class="card-body">
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Role</th>
        </tr>
      </thead>

      <tbody>
        <% @business.users_business_user.each do |user_and_role| %>
          <tr onclick="location.href='<%= user_path(user_and_role.user) %>'" class="clickable">
            <td><%= user_and_role.user.name %></td>
            <td><%= user_and_role.role.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @current_user.tradesmen? %>
  <% if not @business_tradesmen_profile and can? :create, BusinessesTradesmenProfile%>
    <%= button_to 'Trust', businesses_tradesmen_profile_index_path(business_id: @business.id, tradesmen_profile_id: @current_user.tradesmen_profile_belongs.id), method: :post, action: :create %>
  <% elsif can? :destroy, BusinessesTradesmenProfile %>
    <%= button_to 'Untrust', businesses_tradesmen_profile_path(id: @business_tradesmen_profile.id), method: :delete, action: 'destroy' %>
  <% end %>
<% end %>

<%= link_to 'Back', 'javascript:history.back()' %>
