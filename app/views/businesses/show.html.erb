<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @business.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @business.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @business.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @business.phone %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to @business.owner.name, user_path(id: @business.owner.id) %>
</p>

<p>
  <strong>Users:</strong>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
      </tr>
    </thead>

    <tbody>
      <% @business.users_business_user.each do |user_and_role| %>
        <tr>
          <td><%= user_and_role.user.name %></td>
          <td><%= user_and_role.role.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= button_to 'Register to', businesses_tradesmen_profiles_path(tradesmen_profile_id: @current_user.tradesmen_profile_belongs.id, business_id: @business.id), action: 'create' %>

<%= link_to 'Edit', edit_business_path(@business) %> |
<%= link_to 'Back', businesses_path %>
