<%= form_with(model: business) do |f| %>

  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone2, class: "form-label" %>
        <%= f.text_field :phone2, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <% if current_user.admin? %>
        <div class="mb-3">
          <%= f.label :owner, class: "form-label" %>
          <%= f.text_field :owner_id, class: "form-control" %>
        </div>
      <% end %>

      <div class="float-start actions">
        <%= f.submit class: "btn btn-primary"%>
      </div>

      <% unless business.new_record? %>
        <div class="float-end">
          <%= button_to 'Delete', business_path(business), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary" %>
        </div>
    <% end %>
    </div>
  </div>

<% end %>
