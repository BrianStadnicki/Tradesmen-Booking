<p id="notice"><%= notice %></p>

<% if @current_user.tradesmen? %>

  <h1 class="display-1 text-center">My Businesses</h1>

  <table class="table table-hover table-striped table-bordered">    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @current_user.tradesmen_profile_belongs.businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td><%= business.address %></td>
        <td><%= business.phone %></td>
        <td><%= link_to 'Show', business %></td>
        <% if can? :update, business %>
          <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <% end %>
        <% if can? :destroy, business %>
          <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

