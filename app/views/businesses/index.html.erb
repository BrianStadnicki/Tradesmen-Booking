<h1 class="display-1 text-center">Businesses</h1>

<% if current_user.tradesmen? %>
  <%= render "index_nav" %>
<% end %>

<table class="table table-hover table-striped table-bordered table-responsive">  
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Phone</th>
    </tr>
    <% if can? :create, Business %>
    <%= link_to 'New Business', new_business_path, class: "btn btn-primary float-end new-table-btn" %>
  <% end %>
  </thead>

  <tbody id="main-paginated">
    <% @businesses.each do |business| %>
      <tr>
        <td><%= link_to business.name, business_path(business) %></td>
        <td><%= business.description %></td>
        <td><%= business.address %></td>
        <td><%= business.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
