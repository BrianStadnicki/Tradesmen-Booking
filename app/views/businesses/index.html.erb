<ul class="nav nav-tabs">
  <li class="nav-item"><%= link_to 'Trusted', trusted_businesses_path, class: "nav-link" %></li>
  <li class="nav-item"><%= link_to 'All', businesses_path, class: "nav-link active" %></li>
</ul>

<p id="notice"><%= notice %></p>

<h1 class="display-1 text-center">All Businesses</h1>

<table class="table table-hover table-striped table-bordered table-responsive">  
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr  onclick="location.href='<%= business_path(business) %>'">
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td><%= business.address %></td>
        <td><%= business.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Business %>
  <%= button_to 'New Business', new_business_path, class: "btn btn-primary", method: :get %>
<% end %>
