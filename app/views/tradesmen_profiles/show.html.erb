<p id="notice"><%= notice %></p>

<div class="card text-center">
  <div class="card-header container-fluid">
    <div class="row">
      <div class="col-md-10">
        <h2 class="float-start"><%= @tradesmen_profile.name %></h2>
      </div>
      <% if can? :update, @tradesmen_profile %>
        <div class="col-md-2 float-end">
          <div class="btn btn-outline-light btn-sm">
            <%= link_to edit_tradesmen_profile_path(@tradesmen_profile), class: "btn" do %>
              <%= svg('pencil-square', width: '25px', height: '25px') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-hover table-striped table-bordered table-responsive">
      <tbody>
        <tr>
          <td>Description</td>
          <td><%= @tradesmen_profile.description %></td>
        </tr>
        <tr>
          <td>Trades</td>
          <td><%= @tradesmen_profile.tradesmen_trades.map(&:name).join(', ') %></td>
        </tr>
        <% if @current_user.admin? %>
          <tr onclick="location.href='<%= user_path(@tradesmen_profile.owner) %>'" class="clickable">
            <td>Owner</td>
            <td><%= @tradesmen_profile.owner.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="card text-center">
  <div class="card-header">
    <h2 class="float-start">Users</h2>
  </div>
  <div class="card-body">
    <table class="table table-hover table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
      </tr>
      </thead>

      <tbody>
      <% @tradesmen_profile.users_tradesmen_profile_user.each do |user_and_role| %>
        <tr onclick="location.href='<%= user_path(user_and_role.user) %>'" class="clickable">
          <td><%= user_and_role.user.name %></td>
          <td><%= user_and_role.role.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @current_user.booker? %>
  <% if not @business_tradesmen_profile and can? :create, BusinessesTradesmenProfile%>
    <%= button_to 'Trust', businesses_tradesmen_profile_index_path(business_id: @current_user.business_belongs.id, tradesmen_profile_id: @tradesmen_profile.id), method: :post, action: :create %>
  <% elsif can? :destroy, BusinessesTradesmenProfile %>
    <%= button_to 'Untrust', businesses_tradesmen_profile_path(id: @business_tradesmen_profile.id), method: :delete, action: 'destroy' %>
  <% end %>
<% end %>

<%= link_to 'Back', 'javascript:history.back()' %>
