<% if current_user.booker? %>
  <ul class="nav nav-tabs">
    <li class="nav-item"><%= link_to 'Trusted', trusted_tradesmen_profiles_path, class: "nav-link" %></li>
    <li class="nav-item"><%= link_to 'All', tradesmen_profiles_path, class: "nav-link active" %></li>
  </ul>
<% end %>

<p id="notice"><%= notice %></p>

<table class="table table-hover table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Trades</th>
    </tr>
  </thead>

  <tbody>
    <% @tradesmen_profiles.each do |tradesmen_profile| %>
      <tr onclick="location.href='<%= tradesmen_profile_path(tradesmen_profile) %>'" class="clickable">
        <td><%= tradesmen_profile.name %></td>
        <td><%= tradesmen_profile.tradesmen_trades.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, TradesmenProfile %>
  <%= button_to 'New Tradesmen Profile', new_tradesmen_profile_path, class: "btn btn-primary", method: :get %>
<% end %>
