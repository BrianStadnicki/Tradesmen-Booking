<%= form_with(model: user) do |f| %>

  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone2, class: "form-label" %>
        <%= f.text_field :phone2, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :role_id, class: "form-label" %>
        <%= f.collection_select(
              :role_id, Role.user_category, :id, :name, { prompt: true }, class: "form-control"
            ) %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %><br>
        <%= f.password_field :password, placeholder: "Leave blank if unchanged", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
     </div>
  </div>

<% end %>
